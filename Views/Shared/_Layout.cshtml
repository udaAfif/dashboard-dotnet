@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString();
    var action = ViewContext.RouteData.Values["action"]?.ToString();
    var username = ViewBag.Username as string;
    var hideLayout = controller == "Account" && (action == "Login" || action == "Register" || action == "ForgotPassword");
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>

<body>

    @if (!hideLayout)
    {
        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">Dashboard App</a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <span class="nav-link" href="/Home/Index">Welcome, @username</span>
                        <li class="nav-item"><a class="nav-link" href="/Account/Logout">Logout</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    }

    <div class="container mt-4">
        @RenderBody()
    </div>


</body>

</html>
